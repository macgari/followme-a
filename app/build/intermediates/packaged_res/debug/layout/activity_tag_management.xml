<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tag_management_description"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:paddingBottom="24dp"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/importCsvButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/import_csv_file"
        android:textSize="16sp"
        android:minHeight="56dp"
        app:icon="@drawable/ic_upload"
        app:iconGravity="textStart" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/createManualTagButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Tag Manually"
        android:textSize="16sp"
        android:minHeight="56dp"
        app:icon="@drawable/ic_add"
        app:iconGravity="textStart"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/csv_format_hint"
        android:textSize="13sp"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp" />

    <TextView
        android:id="@+id/entriesCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_entries_loaded"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:paddingTop="16dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/selectAllButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select All"
            android:textSize="14sp"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <Button
            android:id="@+id/deleteSelectedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Selected"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button.TextButton" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tagEntriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/writeTagsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/write_tags"
        android:textSize="16sp"
        android:padding="16dp"
        android:visibility="gone"
        app:icon="@drawable/ic_nfc"
        app:iconGravity="textStart" />

</LinearLayout>
