<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    style="@style/Widget.FollowMe.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/entryCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Entry Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/entryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="John Doe" />

            <TextView
                android:id="@+id/entryTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                tools:text="2024-01-15 10:30:00" />

            <TextView
                android:id="@+id/entryCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                tools:text="Main" />

        </LinearLayout>

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_pending"
            android:contentDescription="@string/status_pending"
            app:tint="@color/status_pending" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
